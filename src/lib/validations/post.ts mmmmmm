import { z } from "zod";

export const PostCreateSchema = z.object({
  title: z
    .string()
    .min(1, "Tiêu đề là bắt buộc")
    .min(5, "Tiêu đề phải có ít nhất 5 ký tự") // Zod sẽ ưu tiên min(5)
    .max(255, "Tiêu đề không được quá 255 ký tự"),
  content: z.string().max(10000, "Nội dung quá dài").optional(),
  published: z.boolean().optional(),
});

export type PostCreatePayload = z.infer<typeof PostCreateSchema>;