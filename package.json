{
  "name": "finzy-next",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18 <23"
  },
 "scripts": {
    "dev": "next dev -H 0.0.0.0 -p 3000",
    "build": "set SKIP_REDIS=1&& prisma generate && next build",
    "start": "next start -p 3000",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:strict": "eslint . --ext .ts,.tsx --max-warnings=0",
    "schema:check": "prisma validate",
    "deadcode": "ts-prune | grep -v \"(used in module)\" || true",
    "typecheck": "tsc --noEmit",
    "prebuild": "npm run typecheck && npm run lint:strict && npm run schema:check",
    "test": "vitest run",
    "test:watch": "vitest",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev",
    "postinstall": "prisma generate",
    "db:seed": "npx prisma db seed",
    "seed:user1": "npx tsx -e \"import {PrismaClient} from '@prisma/client'; const p=new PrismaClient(); (async()=>{await p.user.upsert({where:{id:1},update:{},create:{id:1,email:'dev1@local',password:'dev',role:'USER'}}); await p.wallet.upsert({where:{userId:1},update:{},create:{userId:1,balance:0,currency:'VND'}}); console.log('Seeded user #1 + wallet'); process.exit(0)})();\"",
    "worker": "tsx -r tsconfig-paths/register -r dotenv/config src/worker/index.ts",
    "prepare": "husky install"
  }, 
  
  "prisma": { 
    "seed": "tsx scripts/seed.ts" 
  },

  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.63.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.552.0",
    "next": "14.2.5",
    "next-auth": "^4.24.13",
    "nodemailer": "^7.0.10",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.0",
    "autoprefixer": "^10.4.20",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.1",
    "typescript": "~5.4.5",
    "vitest": "^2.1.9"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "vitest related --run --silent"
    ]
  }
}
